<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coment_new_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/navigation_background"
    tools:context=".NewComentFragment"
    android:orientation="vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        >

        <TextView
            android:id="@+id/coment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="@string/nav_bottom_comentar"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"/>
    </FrameLayout>

    <EditText
        android:id="@+id/editText_name_new_coment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/new_coment_name_hint"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_coment_coment_hint"
            android:id="@+id/editText_coment_new_coment"
            />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/imageButton"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:backgroundTint="@color/amarelo"
        android:text="Salvar"/>


    <!--TODO: Trocar as Strings pro arquivo de traducoes-->
</LinearLayout>